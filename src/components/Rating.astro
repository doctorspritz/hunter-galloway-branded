<div class="lp-rating flex flex-col sm:flex-row gap-6 items-start">
  <div class="google-rating flex items-center gap-3">
    <div class="google-rating__icon">
      <img src="/images/pages/google-icon.svg" alt="Google" width="54" height="54" loading="lazy" class="w-14 h-14">
    </div>
    <div class="google-rating__content">
      <div class="google-rating__title text-sm font-semibold text-gray-700">Excellent on Google</div>
      <div class="google-rating__stars-container flex items-center gap-2">
        <div class="google-rating__rating text-lg font-bold text-primary">5.0</div>
        <div class="google-rating__stars text-accent text-lg">★★★★★</div>
      </div>
      <div class="google-rating__reviews text-xs text-gray-500">Based on 1,000+ reviews</div>
    </div>
  </div>
  
  <div class="mortgage-rating flex items-center gap-3">
    <div class="mortgage-rating__icon">
      <img src="/images/pages/1-rated.svg" alt="#1 Rated" width="51" height="44" loading="lazy" class="w-12 h-11">
    </div>
    <div class="mortgage-rating__content">
      <div class="mortgage-rating__rated text-sm font-semibold text-gray-700">Rated</div>
      <div class="mortgage-rating__title text-sm font-bold text-primary">#1 Mortgage Broker in Brisbane</div>
      <div class="mortgage-rating__reviews text-xs text-gray-500">with highest approval rate</div>
    </div>
  </div>
</div>