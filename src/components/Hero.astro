---
interface Props {
  title: string;
  subtitle?: string;
  buttonText?: string;
  buttonHref?: string;
  backgroundImage?: string;
  badge?: string;
}

const { 
  title, 
  subtitle, 
  buttonText = "Get Started", 
  buttonHref = "/free-assessment",
  backgroundImage,
  badge 
} = Astro.props;
---

<section class="hero relative py-16 lg:py-24 bg-gradient-to-r from-primary to-primary/90 text-white overflow-hidden">
  {backgroundImage && (
    <div class="absolute inset-0 opacity-20">
      <img src={backgroundImage} alt="" class="w-full h-full object-cover" />
    </div>
  )}
  
  <div class="container max-w-6xl mx-auto px-4 relative z-10">
    <div class="max-w-3xl">
      {badge && (
        <div class="inline-flex items-center gap-2 bg-accent text-black px-4 py-2 rounded-full text-sm font-semibold mb-6">
          <span>‚≠êÔ∏è</span>
          {badge}
        </div>
      )}
      
      <h1 class="text-4xl lg:text-6xl font-bold mb-6 leading-tight">
        {title}
      </h1>
      
      {subtitle && (
        <p class="text-xl lg:text-2xl text-gray-200 mb-8 leading-relaxed">
          {subtitle}
        </p>
      )}
      
      <div class="flex flex-col sm:flex-row gap-4">
        <a 
          href={buttonHref}
          class="inline-flex items-center justify-center bg-accent hover:bg-accent/90 text-black font-semibold px-8 py-4 rounded-lg transition-colors text-lg"
        >
          {buttonText}
        </a>
        
        <a 
          href="tel:0733760823"
          class="inline-flex items-center justify-center border-2 border-white text-white hover:bg-white hover:text-primary font-semibold px-8 py-4 rounded-lg transition-colors text-lg"
        >
          üìû Call Now: 07 3376 0823
        </a>
      </div>
    </div>
  </div>
</section>