---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import Awards from '../components/Awards.astro';
---

<BaseLayout title="Get a home loan with full guidance and expert assistance | Hunter Galloway" 
           description="Hunter Galloway: Award-winning mortgage brokers with 97% approval rate, 30+ lenders, and 14 years experience. Get your free assessment today.">
  <Fragment slot="header"><SiteHeader /></Fragment>
  
  <!-- Hero Section - Exact from front-page.php -->
  <section class="home_offer py-12 bg-white">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="flex home_offer_inner flex-col lg:flex-row gap-8 items-center">
        <div class="home_offer_left max-w-2xl">
          <h1 class="text-4xl lg:text-5xl font-normal text-primary mb-6 leading-tight">
            <b class="font-extrabold">Get a home loan</b> with full guidance and expert assistance
          </h1>
          
          <ul class="list space-y-4 mb-8">
            <li class="flex items-start gap-3">
              <img src="/images/img_new/24_checkmark.svg" alt="checkmark" class="w-6 h-6 mt-1 flex-shrink-0">
              <p class="text-base leading-6">
                <span class="font-semibold text-primary">Market-leading</span> loan approval rate in Australia of 97%
              </p>
            </li>
            <li class="flex items-start gap-3">
              <img src="/images/img_new/24_checkmark.svg" alt="checkmark" class="w-6 h-6 mt-1 flex-shrink-0">
              <span class="text-base leading-6">Variety of options due to direct access to 30+ Australian banks & lenders</span>
            </li>
            <li class="flex items-start gap-3">
              <img src="/images/img_new/24_checkmark.svg" alt="checkmark" class="w-6 h-6 mt-1 flex-shrink-0">
              <p class="text-base leading-6">
                <span class="font-semibold text-primary">#1 rated</span> Mortgage Broker in Brisbane
              </p>
            </li>
          </ul>
          
          <a href="/mortgage-calculator/" class="inline-flex items-center bg-accent hover:bg-accent/90 text-black font-semibold px-8 py-4 rounded-lg transition-colors mb-8">
            Calculate my borrowing capacity
            <img class="lg:hidden ml-2" src="/images/img_new/16_arrow_r_black.svg" alt="arrow">
          </a>

          <div class="flex home-offer-features gap-8 items-center">
            <div class="items-center year-experiences text-center">
              <div class="home_count mb-2">
                <p class="text-4xl font-bold text-accent hidden lg:block">14</p>
                <svg class="lg:hidden w-14 h-9" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 56 37" fill="none">
                  <path d="M22.8952 32H15.7V18.6477C15.7 18.4015 15.7 17.9521 15.7 17.2996C15.7 16.6347 15.706 15.9022 15.7179 15.1019C15.7419 14.3016 15.7718 13.5814 15.8077 12.9412C15.4966 13.3228 15.2036 13.6491 14.9284 13.92C14.6653 14.1908 14.4081 14.4432 14.1569 14.6772L11.1783 17.2072L7.5 12.5534L16.5074 5H22.8952V32Z" fill="#EC9B16" />
                  <path d="M48.5 26.7736H45.6112V32H38.6133V26.7736H28.1525V21.4179L39.0619 5H45.6112V21.3256H48.5V26.7736ZM38.6133 21.3256V18.186C38.6133 17.9029 38.6193 17.5458 38.6313 17.1149C38.6433 16.684 38.6552 16.2531 38.6672 15.8222C38.6911 15.3789 38.709 15.0096 38.721 14.7141C38.7449 14.4063 38.7629 14.2401 38.7748 14.2155H38.5775C38.3502 14.7695 38.1408 15.2312 37.9495 15.6005C37.7581 15.9576 37.5069 16.3824 37.1958 16.8748L34.2891 21.3256H38.6133Z" fill="#EC9B16" />
                </svg>
              </div>
              <p class="text-sm leading-5">Years<br class="hidden lg:block"> of experience</p>
            </div>
            <div class="items-center based-reviews text-center">
              <img src="/images/img_new/google.svg" alt="google icon" class="w-12 h-auto mb-2 mx-auto">
              <p class="text-sm leading-5">Based on<br class="hidden lg:block"> 2000+ reviews</p>
            </div>
          </div>
        </div>
        
        <img class="home_offer_right hidden lg:block w-full max-w-lg rounded-lg" 
             src="/images/img_new/what-you-see-when-you-look-up-full-length-shot-affectionate-family-four-holding-cardboard-roof-their-heads-while-sitting-living-room-home.jpg" 
             alt="Happy family">
        <img class="home_offer_right lg:hidden w-full rounded-lg" 
             src="/images/img_new/what-you-see-when-you-look-up-full-length-shot-affectionate-family-four-holding-cardboard-roof-their-heads-while-sitting-living-room-home.png" 
             alt="Happy family">
      </div>
    </div>
  </section>

  <!-- Awards Section -->
  <section class="home_offer_awards py-8 bg-neutral">
    <div class="container max-w-6xl mx-auto px-4">
      <Awards />
    </div>
  </section>

  <!-- Loan Purpose Section - Exact from front-page.php -->
  <section class="loan-purpose py-16 bg-white" id="loan-purpose">
    <div class="container max-w-6xl mx-auto px-4">
      <h2 class="text-center text-3xl lg:text-4xl font-bold text-primary mb-12">
        What do you need <span class="whitespace-nowrap">a loan for?</span>
      </h2>
      
      <div class="loan-purpose__blocks grid md:grid-cols-2 gap-6">
        <a href="/get-a-stress-free-first-home-loan/" class="load-purpose__block purpose-block relative bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
          <div class="purpose-block__badge absolute top-4 left-4 bg-accent text-black px-3 py-1 rounded-full text-sm font-semibold z-10">
            Most Popular
          </div>
          <div class="purpose-block__content p-6 relative z-10 bg-white/95">
            <div class="purpose-block__title text-xl font-bold text-primary mb-3">Buy My First Home</div>
            <div class="purpose-block__description text-gray-600 mb-4 leading-relaxed">
              Navigate your first home purchase confidently and stress-free with full guidance on each step.
            </div>
            <div class="purpose-block__action">
              <button class="text-accent2 font-semibold hover:text-accent2/80 transition-colors">Learn More</button>
            </div>
          </div>
          <div class="purpose-block__img absolute inset-0">
            <img src="/images/pages/front/first-home.webp" alt="First Home" class="w-full h-full object-cover" loading="lazy">
          </div>
        </a>
        
        <a href="/lower-your-rate" class="load-purpose__block purpose-block relative bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
          <div class="purpose-block__content p-6 relative z-10 bg-white/95">
            <div class="purpose-block__title text-xl font-bold text-primary mb-3">Refinance My Loan</div>
            <div class="purpose-block__description text-gray-600 mb-4 leading-relaxed">
              Reduce your home loan repayments and achieve financial flexibility.
            </div>
            <div class="purpose-block__action">
              <button class="text-accent2 font-semibold hover:text-accent2/80 transition-colors">Learn More</button>
            </div>
          </div>
          <div class="purpose-block__img absolute inset-0">
            <img src="/images/pages/front/refinance.webp" alt="Refinance" class="w-full h-full object-cover" loading="lazy">
          </div>
        </a>
        
        <a href="/ready-to-upgrade/" class="load-purpose__block purpose-block relative bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
          <div class="purpose-block__content p-6 relative z-10 bg-white/95">
            <div class="purpose-block__title text-xl font-bold text-primary mb-3">Upgrade My Home</div>
            <div class="purpose-block__description text-gray-600 mb-4 leading-relaxed">
              Transition smoothly from the sale of your current home to securing financing for your new home
            </div>
            <div class="purpose-block__action">
              <button class="text-accent2 font-semibold hover:text-accent2/80 transition-colors">Learn More</button>
            </div>
          </div>
          <div class="purpose-block__img absolute inset-0">
            <img src="/images/pages/front/upgrade.webp" alt="Upgrade Home" class="w-full h-full object-cover" loading="lazy">
          </div>
        </a>
        
        <a href="/your-property-investment-journey/" class="load-purpose__block purpose-block relative bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow group">
          <div class="purpose-block__content p-6 relative z-10 bg-white/95">
            <div class="purpose-block__title text-xl font-bold text-primary mb-3">Invest in Property</div>
            <div class="purpose-block__description text-gray-600 mb-4 leading-relaxed">
              Get expert mortgage solutions with personalized service and exclusive options.
            </div>
            <div class="purpose-block__action">
              <button class="text-accent2 font-semibold hover:text-accent2/80 transition-colors">Learn More</button>
            </div>
          </div>
          <div class="purpose-block__img absolute inset-0">
            <img src="/images/pages/front/buy-luxury.webp" alt="Investment Property" class="w-full h-full object-cover" loading="lazy">
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Banks Section - Exact from front-page.php -->
  <section class="banks py-16 bg-white">
    <div class="container max-w-6xl mx-auto px-4">
      <h3 class="text-center text-2xl lg:text-3xl font-bold text-primary mb-12">
        We offer flexibility and best rates due to the variety of banks & <span class="whitespace-nowrap">lender networks</span> we work with
      </h3>
      <div class="flex flex-wrap banks_row justify-center items-center gap-6 lg:gap-8">
        <img src="/images/img_new/logos/fm.svg" alt="First Mac" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/bw.svg" alt="Bankwest" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/teachers-mutual-bank.png" alt="Teachers Mutual Bank" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/westpac_logo.svg" alt="Westpac" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/george.svg" alt="St.George" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/macq_logo.png" alt="Macquarie" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/mebank.jpg" alt="ME Bank" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/nab.svg" alt="NAB" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/ing.svg" alt="ING" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/suncorp.svg" alt="Suncorp" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/anz.svg" alt="ANZ" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="https://assets-global.website-files.com/6136b19c6ce8df83584ee2cf/6147e7a162f7c8729cdffb97_bank-of-queensland-limited-boq-vector-logo%20copy-2.png" alt="Bank of Queensland" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="/images/img_new/logos/cb.svg" alt="CommBank" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
        <img src="https://www.auswidebank.com.au/Client_Theme/imgs/auswide-bank-logo.png" alt="Auswide Bank" class="h-8 lg:h-10 w-auto opacity-70 hover:opacity-100 transition-opacity">
      </div>
    </div>
  </section>

  <!-- Mortgage vs Rent Calculator - Exact from front-page.php -->
  <section class="mortagevsrent py-16 bg-neutral text-center" id="mortagevsrent">
    <div class="container max-w-4xl mx-auto px-4">
      <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-4">Compare your current rent with your mortgage payment</h2>
      <p class="text-lg text-gray-600 mb-12">Your mortgage payment could be lower than your current rent.</p>
      
      <div class="mortagevsrent_calc bg-white p-8 rounded-lg shadow-lg">
        <h4 class="text-xl font-semibold text-primary mb-2">What is your weekly rent?</h4>
        <p class="text-gray-600 mb-8">The rent you are currently paying for the property you live in.</p>

        <div class="calc__slider mb-8">
          <input type="range" min="100" max="2500" value="100" step="50" class="calc__slider-input w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer mb-4" />
          <div class="calc__slider-caption text-2xl font-bold text-accent mb-4">$100</div>
          <div class="calc__slider-sides flex justify-between text-sm text-gray-500">
            <div class="calc__slider-min">$100</div>
            <div class="calc__slider-max">$2500</div>
          </div>
        </div>

        <div class="calc__btn-wrap">
          <button class="calc__btn bg-accent hover:bg-accent/90 text-black font-semibold px-8 py-4 rounded-lg transition-colors inline-flex items-center">
            Calculate
            <img class="lg:hidden ml-2" src="/images/img_new/16_arrow_r_black.svg" alt="arrow">
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section - Exact from front-page.php -->
  <section class="to-map py-16 bg-white">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="to-map__info max-w-2xl">
        <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-4">Looking for property in Brisbane?</h2>
        <p class="text-lg text-gray-600 mb-6">Compare where to live, invest and buy in 2024 on our interactive map</p>
        <ul class="space-y-2 mb-8">
          <li class="flex items-center gap-3">
            <div class="w-2 h-2 bg-accent rounded-full"></div>
            <span>Housing prices in the area</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-2 h-2 bg-accent rounded-full"></div>
            <span>Distance to the nearest public transport</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-2 h-2 bg-accent rounded-full"></div>
            <span>Overview of schools</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-2 h-2 bg-accent rounded-full"></div>
            <span>Availability of green zones and cafes/bars</span>
          </li>
        </ul>
        <img class="lg:hidden mb-6" src="/images/img_new/to-map.svg" alt="map image">
        <a href='/suburbs-map/' target="_blank" class="to-map__button bg-accent hover:bg-accent/90 text-black font-semibold px-8 py-4 rounded-lg transition-colors inline-flex items-center">
          Explore map
          <img class="lg:hidden ml-2" src="/images/img_new/16_arrow_r_black.svg" alt="arrow">
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Section - Exact from front-page.php -->
  <section id="why_choose" class="why_choose py-16 bg-neutral">
    <div class="container max-w-6xl mx-auto px-4">
      <h2 class="text-center text-3xl lg:text-4xl font-bold text-primary mb-12">Why Hunter Galloway is the ultimate choice</h2>
      <div class="flex flex-wrap justify-center gap-8">
        <div class="why_choose-item text-center bg-white p-6 rounded-lg shadow-md">
          <p class="text-4xl lg:text-5xl font-bold text-accent mb-2">97%</p>
          <p class="text-gray-600">Loan approval rate</p>
        </div>
        <div class="why_choose-item text-center bg-white p-6 rounded-lg shadow-md">
          <p class="text-4xl lg:text-5xl font-bold text-accent mb-2">14</p>
          <p class="text-gray-600">years of experience</p>
        </div>
        <div class="why_choose-item text-center bg-white p-6 rounded-lg shadow-md">
          <p class="text-4xl lg:text-5xl font-bold text-accent mb-2">2,000+</p>
          <p class="text-gray-600">Happy customers</p>
        </div>
        <div class="why_choose-item text-center bg-white p-6 rounded-lg shadow-md">
          <p class="text-4xl lg:text-5xl font-bold text-accent mb-2">30+</p>
          <p class="text-gray-600">Banks and lenders we have direct access to</p>
        </div>
      </div>
    </div>
  </section>

  <Fragment slot="footer"><SiteFooter /></Fragment>
</BaseLayout>